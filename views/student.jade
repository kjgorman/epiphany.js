extends layout
block content
  div#set-nick
      span 
          | And you are?
      input(type='text')#set-nick-input
      div.btn.btn-success#set-nick-btn
          | Get Started!

  div#show-nick.hide
      | Hello, 
      span#welcome-text

  .container.hide
    h1
        | Class 
        span#class-num
    h3#connecting.pull-left
        | connecting...
    h3.pull-right#online
        | Users connected: 0
    div#class-text.well
    div.row
        div.span12
            textarea(rows='10', readonly='readonly')#scratch.span12
        div.span12#btn-container
            .btn.btn-success#submit.span1
                | submit
            .btn.btn-warning#help.span2
                | request assistance
        h4.span12 
            | use output("some text") to write into the console
        div.span12
            textarea(rows='10', readonly='readonly')#console.span12
                | >> 
        .btn.btn-info#nerd.span2
            | nerd mode
block pagejs
  != js('student')
