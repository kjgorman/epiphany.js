@import 'nib'

.container
  margin-top 60px

h2
  smooth-button()
  width: 90%
  font-size: 2em

pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

textarea
  max-height:200px  

div.centerpiece
  text-align :center
  margin-top :25%  

div.footer
  text-align :center
  margin-top :25%
  font-size  :0.5em

span.gate:hover
  color : #050505
a.gate
  text-decoration:none

div.student-box
  background-color #f3f3f3
  text-align center
  -moz-border-radius 20px
  -webkit-border-radius 20px

div.prog
  background-color #d5d5d5
  -moz-border-radius 5px
  -webkit-border-radius 5px
  margin-bottom 10px
  margin-left 0
  margin-right 0
div.lesson
  display inline
  padding-left 4%
  padding-right 4%
  margin 1px
div.lesson.complete
  background-color #6f6
div.lesson.incomplete
  background-color #f66

h3.student-nick
  cursor:pointer

div.btn-nerd-mode
  background-color #000
  border solid 1px #0f0
  color #0f0
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#000), to(#000));
  background-image: -webkit-linear-gradient(top, #000, #000);
  background-image: -o-linear-gradient(top, #000, #000);
  background-image: linear-gradient(to bottom, #000, #000);
  background-image: -moz-linear-gradient(top, #000, #000);
  background-repeat: repeat-x;

div.class-text
  margin-top 40px

div#set-nick
  position absolute
  right    100px
  top      15px
input#set-nick-input
  margin-top 7px
div#show-nick
  position  absolute
  left      100px
  top       15px
  font-size 1.5em



